<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/grad_bg"
    tools:context=".Homepageactivtiy">

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:id="@+id/layout_kitap_inner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:neomorph_background_color="@color/gradientStart"
        app:neomorph_corner_radius="10dp"
        app:neomorph_elevation="2dp"
        app:neomorph_highlight_color="@color/shadow3"
        app:neomorph_shadow_color="@color/highlight"
        app:neomorph_shadow_type="outer"
        app:neomorph_view_type="rectangular"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="75dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:text="Engelsiz Kitap"
            android:textColor="@color/txt"
            android:textSize="40dp"
            android:textColorHighlight="@color/highlight"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:id="@+id/mainTxt"/>
    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:id="@+id/layout_logo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        app:neomorph_background_color="@color/circle"
        app:neomorph_corner_radius="170dp"
        app:neomorph_elevation="10dp"
        app:neomorph_highlight_color="@color/highlight"
        app:neomorph_shadow_color="@color/shadow_color"
        app:neomorph_shadow_type="outer"
        app:neomorph_view_type="rectangular"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="10dp">

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/layout_logo3"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_centerHorizontal="true"
            app:neomorph_background_color="@color/gradientStart"
            app:neomorph_corner_radius="170dp"
            app:neomorph_elevation="0dp"
            app:neomorph_view_type="rectangular"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:foreground="@drawable/img_view_dark">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/mic_symbol2"/>


        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:id="@+id/layout_logo2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        app:neomorph_background_color="@color/circle"
        app:neomorph_corner_radius="170dp"
        app:neomorph_elevation="10dp"
        app:neomorph_highlight_color="@color/shadow_color"
        app:neomorph_shadow_color="@color/highlight"
        app:neomorph_shadow_type="outer"
        app:neomorph_view_type="rectangular"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="10dp">

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/layout_logo4"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_centerHorizontal="true"
            app:neomorph_background_color="@color/gradientStart"
            app:neomorph_corner_radius="170dp"
            app:neomorph_elevation="0dp"
            app:neomorph_view_type="rectangular"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:foreground="@drawable/img_view">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/record_symbol2"/>


        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

</RelativeLayout>