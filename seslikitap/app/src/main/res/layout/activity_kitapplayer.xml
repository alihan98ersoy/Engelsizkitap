<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    android:layout_gravity="center"
    tools:context=".Kitapplayer">

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:id="@+id/layout_book"
        android:layout_width="370dp"
        android:layout_height="470dp"
        android:layout_centerHorizontal="true"
        app:neomorph_background_color="@color/gradientStart"
        app:neomorph_corner_radius="25dp"
        app:neomorph_elevation="5dp"
        app:neomorph_highlight_color="@color/highlight"
        app:neomorph_shadow_color="@color/shadow_color"
        app:neomorph_shadow_type="outer"
        app:neomorph_view_type="rectangular"
        android:layout_marginTop="15dp">

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/layout_book_inner"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_centerHorizontal="true"
            app:neomorph_background_color="@color/gradientStart"
            app:neomorph_corner_radius="0dp"
            app:neomorph_elevation="3dp"
            app:neomorph_highlight_color="@color/shadow_color"
            app:neomorph_shadow_color="@color/pink"
            app:neomorph_shadow_type="inner"
            app:neomorph_view_type="rectangular"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="370dp"
                android:layout_height="370dp"
                app:srcCompat="@drawable/denemesplash"
                android:layout_gravity="center"/>

        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:id="@+id/layout_kitap_inner"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:neomorph_background_color="@color/shadow2"
        app:neomorph_corner_radius="10dp"
        app:neomorph_elevation="2dp"
        app:neomorph_highlight_color="@color/shadow3"
        app:neomorph_shadow_color="@color/highlight"
        app:neomorph_shadow_type="outer"
        app:neomorph_view_type="rectangular"
        android:layout_below="@id/layout_book">

        <TextView
            android:id="@+id/txtkitapismi"
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:textColor="@color/txt"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="45dp"
            android:background="@drawable/shape_rectangle"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="2dp"

            android:focusable="true"
            android:focusableInTouchMode="true"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit ="marquee_forever"/>

    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>


    <TextView
        android:id="@+id/txtanlıkzamanı"
        android:layout_width="92dp"
        android:layout_height="19dp"
        android:layout_above="@id/layout_seek"
        android:layout_alignStart="@id/layout_seek"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="-95dp"
        android:textColor="@color/txt"/>

    <TextView
        android:id="@+id/txttoplamsüresi"
        android:layout_width="92dp"
        android:layout_height="19dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="8dp"
        android:layout_alignEnd="@id/layout_seek"
        android:layout_above="@id/layout_seek"
        android:layout_marginBottom="-95dp"
        android:textColor="@color/txt"/>

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:id="@+id/layout_seek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:neomorph_background_color="@color/shadow2"
        app:neomorph_corner_radius="10dp"
        app:neomorph_elevation="2dp"
        app:neomorph_highlight_color="@color/shadow3"
        app:neomorph_shadow_color="@color/highlight"
        app:neomorph_shadow_type="outer"
        app:neomorph_view_type="rectangular"
        android:layout_below="@id/layout_book"
        android:layout_marginTop="95dp">

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="362dp"
            android:layout_height="20dp"/>

    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/layout_seek">

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/layout_btn5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            app:neomorph_background_color="@color/circle"
            app:neomorph_corner_radius="150dp"
            app:neomorph_elevation="5dp"
            app:neomorph_highlight_color="@color/highlight"
            app:neomorph_shadow_color="@color/shadow3"
            app:neomorph_shadow_type="outer"
            app:neomorph_view_type="rectangular"
            android:layout_marginEnd="-15dp"
            android:layout_marginRight="15dp">

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:id="@+id/layout_btn1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                app:neomorph_background_color="@color/gradientStart"
                app:neomorph_corner_radius="150dp"
                app:neomorph_elevation="0dp"
                app:neomorph_view_type="rectangular"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">

                <ImageButton
                    android:id="@+id/imageButtongeri"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rewind_btn2"
                    android:layout_marginRight="5dp"/>
            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/layout_btn9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            app:neomorph_background_color="@color/circle"
            app:neomorph_corner_radius="150dp"
            app:neomorph_elevation="5dp"
            app:neomorph_highlight_color="@color/shadow3"
            app:neomorph_shadow_color="@color/highlight"
            app:neomorph_shadow_type="outer"
            app:neomorph_view_type="rectangular"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginStart="-65dp">

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:id="@+id/layout_btn10"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                app:neomorph_background_color="@color/gradientStart"
                app:neomorph_corner_radius="150dp"
                app:neomorph_elevation="0dp"
                app:neomorph_view_type="rectangular"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">

                <ImageButton
                    android:id="@+id/imageButtongeri2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rewind_btn2"
                    android:layout_marginRight="5dp"/>
            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>


        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/layout_btn6"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            app:neomorph_background_color="@color/circle"
            app:neomorph_corner_radius="150dp"
            app:neomorph_elevation="10dp"
            app:neomorph_highlight_color="@color/highlight"
            app:neomorph_shadow_color="@color/shadow3"
            app:neomorph_shadow_type="outer"
            app:neomorph_view_type="rectangular"
            android:layout_marginLeft="-5dp">

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:id="@+id/layout_btn2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                app:neomorph_background_color="@color/gradientStart"
                app:neomorph_corner_radius="150dp"
                app:neomorph_elevation="0dp"
                app:neomorph_view_type="rectangular"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp">

                <ImageButton
                    android:id="@+id/imageButtonbaslatdurdur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/play_btn2"
                    android:layout_marginLeft="5dp"/>
            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/layout_btn7"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            app:neomorph_background_color="@color/circle"
            app:neomorph_corner_radius="150dp"
            app:neomorph_elevation="10dp"
            app:neomorph_highlight_color="@color/shadow3"
            app:neomorph_shadow_color="@color/highlight"
            app:neomorph_shadow_type="outer"
            app:neomorph_view_type="rectangular"
            android:layout_marginLeft="-120dp"
            android:layout_marginRight="-1dp">

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:id="@+id/layout_btn3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                app:neomorph_background_color="@color/gradientStart"
                app:neomorph_corner_radius="150dp"
                app:neomorph_elevation="0dp"
                app:neomorph_view_type="rectangular"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp">

                <ImageButton
                    android:id="@+id/imageButtonbaslatdurdur2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pause_btn2"/>
            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/layout_btn11"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            app:neomorph_background_color="@color/circle"
            app:neomorph_corner_radius="150dp"
            app:neomorph_elevation="5dp"
            app:neomorph_highlight_color="@color/shadow3"
            app:neomorph_shadow_color="@color/highlight"
            app:neomorph_shadow_type="outer"
            app:neomorph_view_type="rectangular"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp">

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:id="@+id/layout_btn12"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                app:neomorph_background_color="@color/gradientStart"
                app:neomorph_corner_radius="150dp"
                app:neomorph_elevation="0dp"
                app:neomorph_view_type="rectangular"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp">

                <ImageButton
                    android:id="@+id/imageButtonileri2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/forward_btn2"
                    android:layout_marginLeft="5dp"/>
            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/layout_btn8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            app:neomorph_background_color="@color/circle"
            app:neomorph_corner_radius="150dp"
            app:neomorph_elevation="5dp"
            app:neomorph_highlight_color="@color/highlight"
            app:neomorph_shadow_color="@color/shadow3"
            app:neomorph_shadow_type="outer"
            app:neomorph_view_type="rectangular"
            android:layout_marginStart="-80dp"
            android:layout_marginLeft="16dp">

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:id="@+id/layout_btn4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                app:neomorph_background_color="@color/gradientStart"
                app:neomorph_corner_radius="150dp"
                app:neomorph_elevation="0dp"
                app:neomorph_view_type="rectangular"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp">

                <ImageButton
                    android:id="@+id/imageButtonileri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/forward_btn2"
                    android:layout_marginLeft="5dp"/>
            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
    </LinearLayout>
</RelativeLayout>